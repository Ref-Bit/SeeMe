<div class="container mb-5 mt-5">
    <div class="row">
        <div class="col-md-6">
                <form role="form" class="lead" method="post" action="/admin/add" enctype="multipart/form-data">
                    <h3 class="">Done anything new? Fill the form</h3>
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title" class="form-control input-md">
                    </div>
                    <div class="form-group">
                        <label for="service">Service</label>
                        <input type="text" name="service" id="service" class="form-control input-md">
                    </div>
                    <div class="form-group">
                        <label for="client">Client</label>
                        <input type="text" name="client" id="client" class="form-control input-md">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea name="description" id="description" cols="5" rows="5" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="url">Project Url</label>
                        <input type="url" name="url" id="url" class="form-control input-md">
                    </div>
                    <div class="form-group">
                        <label for="date">Project Date</label>
                        <input type="date" name="date" id="date" class="form-control input-md">
                    </div>
                    <div class="custom-file mb-3">
                        <input type="file" class="custom-file-input" id="customFile" name="image">
                        <label class="custom-file-label" for="customFile">Upload Image</label>
                    </div>
                    <div class="form-group text-right">
                        <button class="btn btn-outline-success btn-lg btn-block">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


